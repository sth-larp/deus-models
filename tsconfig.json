{
    "compilerOptions": {
        "target": "ES6",
        "lib": ["es2017"],
        "module": "commonjs",
        "noImplicitAny": false,
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "allowJs": true,
        "outDir": "./build"
    },
    "typeRoots": [
        "./node_modules/@types"
      ],
    "include": ["**/*.ts"]
}
